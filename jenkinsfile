pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh '/usr/local/bin/mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                sh "mvn test -Dcucumber.filter.tags='${params.SCENARIO_TAG}'"
            }
            post {
                always {
                    step([$class: 'Publisher', reportFilenamePattern: '**/test-output/testng-results.xml'])
                }
            }
        }
    }
}
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh '/usr/local/bin/mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                sh "/usr/local/bin/mvn test -Dcucumber.filter.tags='${params.SCENARIO_TAG}'"
            }
            post {
                always {
                    cucumber(
                          buildStatus: 'UNSTABLE',
                          fileIncludePattern: '**/*.json',
                          jsonReportDirectory: 'target/cucumber-reports/',
                          reportTitle: 'Cucumber Test Results'
                        )
                }
            }
        }
    }
}